<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:indeterminateTint="?android:colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/textViewLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/profile_loading"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        tools:visibility="gone"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.NavigationView.Item"
        app:srcCompat="@drawable/profile"
        app:strokeColor="@color/cardview_shadow_start_color"
        app:strokeWidth="1dp"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewRealname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfile"
        app:layout_constraintTop_toTopOf="@+id/imageViewProfile"/>

    <TextView
        android:id="@+id/textViewNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewRealname"
        app:layout_constraintStart_toStartOf="@+id/textViewRealname"
        app:layout_constraintTop_toBottomOf="@+id/textViewRealname"/>

    <TextView
        android:id="@+id/textViewCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewRealname"
        app:layout_constraintStart_toStartOf="@+id/textViewRealname"
        app:layout_constraintTop_toBottomOf="@+id/textViewNickname"/>

    <TextView
        android:id="@+id/textViewBirthdateTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/profile_birthdate"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textViewRealname"
        app:layout_constraintStart_toStartOf="@+id/textViewRealname"
        app:layout_constraintTop_toBottomOf="@+id/textViewCountry"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewBirthdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewRealname"
        app:layout_constraintStart_toStartOf="@+id/textViewRealname"
        app:layout_constraintTop_toBottomOf="@+id/textViewBirthdateTitle"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewPoints"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/neutral_95"
        android:scaleType="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfile"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        app:srcCompat="@drawable/ic_baseline_monetization_on_40"
        app:strokeColor="@color/cardview_shadow_start_color"
        app:strokeWidth="1dp"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewPointsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/profile_points"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/imageViewPoints"
        app:layout_constraintTop_toTopOf="@+id/imageViewPoints"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPointsTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewPointsTitle"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewRanking"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/neutral_95"
        android:scaleType="center"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textViewPointsTitle"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfile"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        app:srcCompat="@drawable/ic_baseline_trending_up_40"
        app:strokeColor="@color/cardview_shadow_start_color"
        app:strokeWidth="1dp"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewRankingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/profile_ranking"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/imageViewRanking"
        app:layout_constraintTop_toTopOf="@+id/imageViewRanking"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textViewRankingTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewRankingTitle"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewCalendar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/neutral_95"
        android:scaleType="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageViewPoints"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPoints"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        app:srcCompat="@drawable/ic_baseline_calendar_today_40"
        app:strokeColor="@color/cardview_shadow_start_color"
        app:strokeWidth="1dp"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewCalendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/profile_date"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/imageViewCalendar"
        app:layout_constraintTop_toTopOf="@+id/imageViewCalendar"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textViewCalendarTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewCalendarTitle"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewFriends"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/neutral_95"
        android:scaleType="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageViewRanking"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRanking"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        app:srcCompat="@drawable/ic_baseline_people_alt_40"
        app:strokeColor="@color/cardview_shadow_start_color"
        app:strokeWidth="1dp"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewFriendsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/profile_friends"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/imageViewFriends"
        app:layout_constraintTop_toTopOf="@+id/imageViewFriends"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textViewFriendsTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewFriendsTitle"/>

    <ProgressBar
        android:id="@+id/progressBarWinrate"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:indeterminate="false"
        android:progressTint="?android:colorPrimary"
        android:scaleY="3"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWinrate"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/textViewWinrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/progressBarWinrate"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCalendar"/>

</androidx.constraintlayout.widget.ConstraintLayout>
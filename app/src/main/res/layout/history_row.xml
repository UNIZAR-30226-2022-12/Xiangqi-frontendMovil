<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="17/05/2022"/>

            <TextView
                android:id="@+id/textViewHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:text="21:53"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/neutral_95"/>

        <TextView
            android:id="@+id/textViewWinner"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:text="android test long"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/neutral_95"/>

        <TextView
            android:id="@+id/textViewMoves"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:text="#1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/neutral_95"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonReview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/history_review"
            android:textSize="11sp"
            app:icon="@drawable/ic_baseline_search_40"
            app:iconSize="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral_95"/>
</LinearLayout>